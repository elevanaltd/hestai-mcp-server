{
  "version": "1.0.0",
  "enabled": false,
  "default_cli": "claude",
  "tasks": {
    "session_compression": {
      "trigger": "clock_out.post_archive",
      "enabled": false,
      "cli": "claude",
      "role": "system-steward",
      "prompt_template": "systemprompts/context_steward/session_compression.txt",
      "inputs": ["session_metadata", "transcript_file", "archive_summary"],
      "output": {
        "expected_format": "octave",
        "write_path": ".hestai/sessions/archive/{session_id}-octave.oct.md"
      },
      "files": ["{transcript_path}"],
      "retry": {
        "attempts": 1,
        "delay_seconds": 2
      }
    }
  }
}
